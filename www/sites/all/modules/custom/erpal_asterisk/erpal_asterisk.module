  module_invoke_all('ingoing_call', $destination, $source);
  $s = ($source == NULL) ? 'NULL' : $source;
  return 'call notification with destination ' 
    . $destination 
    . ' and source ' 
    . $s 
    . ' forwarded to asterisk_notify.';
    
  return implode (
  	'', 
    module_invoke_all('ingoing_call', $destination, $source)
  ); 
