<?php

/**
* Implements hook_form_alter
*/
function screenshot_paste_form_alter(&$form, &$form_state, $form_id) {
  //this ads javascript so that screenshots could be added tby copy and paste
  $mod_path = drupal_get_path('module', 'screenshot_paste');
  $js_path = $mod_path.'/js/clipboard-image-chrome.js';
  drupal_add_js($js_path);
}